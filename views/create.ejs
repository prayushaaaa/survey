        <button type="submit" name="submit" value="<%=user.userID%>">Submit</button>
    </form>
    
        <h3><%=newQuestion%></h3>
    <ul>
    <% for(var i=0; i<newAnswer.length; i++){ %>
        <li><%=newAnswer[i]%></li>
    <% } %>
    
    </ul>

</body>
